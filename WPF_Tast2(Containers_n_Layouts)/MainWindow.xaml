            <Button Margin="10" FontSize="30" Click="Button_Click_8">8</Button>
            <Button Margin="10" FontSize="30" Click="Button_Click_9">9</Button>
            <Button Margin="10" FontSize="30" Click="Button_Click_4">4</Button>
            <Button Margin="10" FontSize="30" Click="Button_Click_5">5</Button>
            <Button Margin="10" FontSize="30" Click="Button_Click_6">6</Button>
            <Button Margin="10" FontSize="30" Click="Button_Click_1">1</Button>
            <Button Margin="10" FontSize="30" Click="Button_Click_2">2</Button>
            <Button Margin="10" FontSize="30" Click="Button_Click_3">3</Button>
            <Button Margin="10" FontSize="30" Click="Button_Click">C</Button>
            <Button Margin="10" FontSize="30" Click="Button_Click_0">0</Button>
            <Button Margin="10" FontSize="30" Click="Button_Click_10">Ok</Button>
        </UniformGrid>
    </Grid>
</Window>
